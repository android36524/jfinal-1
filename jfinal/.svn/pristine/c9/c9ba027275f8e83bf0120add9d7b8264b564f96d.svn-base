.main_box .top3_con li .img_c img{ width:162px; height:190px;}
.main_box .top3_con li .font_c {font-size:14px; line-height:30px; font-weight:bold; text-align:center; margin-top:5px;}
.main_box .top3_con li .font_c  h4{ border-bottom:1px solid #000; color:#ad905c; font-size:16px; }
.main_box .top3_con li .font_c  p{color:#cd171e}

