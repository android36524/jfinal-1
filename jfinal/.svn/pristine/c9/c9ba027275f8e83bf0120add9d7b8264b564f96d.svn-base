.main_box2 .team_con2 .team_c li dt{ float:left; width:20px; margin-top:5px; text-align:center}
.main_box2 .team_con2 .team_c li .font_c {font-size:14px; line-height:30px; margin-left:23px;}
.main_box2 .team_con2 .team_c li .font_c  h4{ font-weight:normal; border-bottom:1px solid #000;}

.foot_box{ width:1920px; margin:0 auto; height:22px;background: url(../images/foot_bg.jpg) repeat-x; position:fixed; bottom:0px }


